rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to any user who is authenticated for testing
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow all authenticated users to read/write to inventory for testing
    match /inventory/{itemId} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to all authenticated users for other collections
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Block all writes by default
    }
  }
}
